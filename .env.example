# Community Event Template - Environment Variables
# Copy this file to .env and fill in your values

# Site Configuration
VITE_SITE_URL=https://your-event.com
VITE_SITE_NAME=Your Event Name 2025

# Analytics (Optional - remove VITE_ prefix if not using)
# Google Analytics
VITE_GA_ID=

# Facebook Pixel
VITE_FB_PIXEL_ID=

# Plausible Analytics
VITE_PLAUSIBLE_DOMAIN=

# External Services (Optional)
# Google Maps API Key (for venue map)
VITE_GOOGLE_MAPS_API_KEY=

# reCAPTCHA (for forms)
VITE_RECAPTCHA_SITE_KEY=

# Contact & Support
VITE_CONTACT_EMAIL=hello@your-event.com
VITE_SUPPORT_EMAIL=support@your-event.com

# Feature Flags (true/false)
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_LIVE_CHAT=false

# API Endpoints (if using backend)
VITE_API_URL=https://api.your-event.com
VITE_API_KEY=

# Social Media (Optional - for dynamic links)
VITE_TWITTER_HANDLE=@yourevent
VITE_FACEBOOK_PAGE=yourevent
VITE_LINKEDIN_PAGE=company/your-event

# Development
VITE_DEV_MODE=false
